 {
         CsmSystemd *manager = CSM_SYSTEMD (system);
-        gchar *rv;
+        gchar *rv = NULL;
         GVariant *res;
         gboolean can_hybrid_sleep;
 
@@ -405,7 +405,7 @@
 csm_systemd_can_suspend (CsmSystem *system)
 {
