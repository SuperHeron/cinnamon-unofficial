    build+run:
        dev-libs/glib:2
        dev-libs/pugixml
        sys-apps/systemd
        sys-libs/libinput
        x11-libs/cairo
        x11-libs/gtk+:3
        x11-libs/libX11
        x11-libs/libXi
        x11-libs/libXrandr
        x11-libs/libXtst
"

